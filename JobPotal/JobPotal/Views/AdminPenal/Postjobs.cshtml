
@{
    ViewBag.Title = "Postjobs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<

<head>

    <title>Post New Job</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fa;
            padding-top: 20px;
        }

        .container {
            max-width: 1100px;
            margin: auto;
        }

        .card {
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .form-check-label {
            margin-left: 10px;
        }

        .mb-3 {
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }
    </style>
</head>

<body>

    <div class="container py-5">
        <h2 class="text-center mb-4">Post New Job</h2>
        <div class="card shadow-sm">
            <div class="card-body">
                <form action="/PostNewJob" method="post">
                    <div class="mb-3">
                        <label for="jobTitle" class="form-label">Job Title</label>
                        <input type="text" class="form-control" name="JobTitle" id="jobTitle" placeholder="Enter job title" required>
                    </div>
                    <div class="mb-3">
                        <label for="companyName" class="form-label">Company Name</label>
                        <input type="text" class="form-control" name="CompanyName" id="companyName" placeholder="Enter company name" required>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" name="Location" id="location" placeholder="Enter job location" required>
                    </div>

                    <div class="mb-3">
                        <label for="jobType" class="form-label">Job Type</label>
                        <select class="form-select" id="jobType" name="JobType" required>
                            <option value="" disabled selected>Select job type</option>
                            <option value="Full-Time">Full-Time</option>
                            <option value="Part-Time">Part-Time</option>
                            <option value="Contract">Contract</option>
                            <option value="Internship">Internship</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="jobCategory" class="form-label">Job Category</label>
                        <select class="form-select" id="jobCategory" name="JobCategory" required>
                            <option value="">All Category</option>
                            <option value="Design & Creative">Design & Creative</option>
                            <option value="Design & Development">Design & Development</option>
                            <option value="Sales & Marketing">Sales & Marketing</option>
                            <option value="Mobile Application">Mobile Application</option>
                            <option value="Construction">Construction</option>
                            <option value="Information Technology">Information Technology</option>
                            <option value="Real Estate">Real Estate</option>
                            <option value="Content Writer">Content Writer</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="jobexperience" class="form-label">Experience</label>
                        <select class="form-select" id="jobexperience" name="Experience" required>
                            <option value="FRESHR">FRESHR</option>
                            <option value="1-2 Year">1-2 Year</option>
                            <option value="2-3 Year">2-3 Year</option>
                            <option value="3-6 Year">3-6 Year</option>
                            <option value="6 more Year">6 more Year</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Education</label>
                        <div class="form-check d-inline-block me-3">
                            <input class="form-check-input" type="checkbox" name="EducationBTech" id="educationBTech" value="B.Tech">
                            <label class="form-check-label" for="educationBTech">B.Tech</label>
                        </div>

                        <div class="form-check d-inline-block me-3">
                            <input class="form-check-input" name="EducationBCA" type="checkbox" id="educationBCA" value="BCA">
                            <label class="form-check-label" for="educationBCA">BCA</label>
                        </div>
                        <div class="form-check d-inline-block me-3">
                            <input class="form-check-input" type="checkbox" name="EducationMCA" id="educationMCA" value="MCA">
                            <label class="form-check-label" for="educationMCA">MCA</label>
                        </div>
                        <div class="form-check d-inline-block me-3">
                            <input class="form-check-input" name="EducationBSc" type="checkbox" id="educationBSc" value="B.Sc">
                            <label class="form-check-label" for="educationBSc">B.Sc</label>
                        </div>
                        <div class="form-check d-inline-block me-3">
                            <input class="form-check-input" type="checkbox" name="EducationOther" id="educationOther" value="Other">
                            <label class="form-check-label" for="educationOther">Other</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Skills</label>
                        <div class="form-check d-inline-block me-3">
                            <input class="form-check-input skill" name="SkillJava" type="checkbox" id="skillJava" value="Java">
                            <label class="form-check-label" for="skillJava">Java</label>
                        </div>
                        <div class="form-check d-inline-block ms-3">
                            <input class="form-check-input framework-java" name="JavaSpring" type="checkbox" id="javaSpring" value="Spring">
                            <label class="form-check-label" for="javaSpring">Spring</label>
                        </div>
                        <div class="form-check d-inline-block ms-3">
                            <input class="form-check-input framework-java" name="JavaHibernate" type="checkbox" id="javaHibernate" value="Hibernate">
                            <label class="form-check-label" for="javaHibernate">Hibernate</label>
                        </div>

                        <div class="form-check d-inline-block me-3">
                            <input class="form-check-input skill" type="checkbox" name="SkillCSharp" id="skillCSharp" value="C#">
                            <label class="form-check-label" for="skillCSharp">C#</label>
                        </div>
                        <div class="form-check d-inline-block ms-3">
                            <input class="form-check-input framework-csharp" type="checkbox" name="CSharpDotNet" id="csharpDotNet" value=".NET">
                            <label class="form-check-label" for="csharpDotNet">.NET</label>
                        </div>
                        <div class="form-check d-inline-block ms-3">
                            <input class="form-check-input framework-csharp" type="checkbox" name="ASPDotNet" id="ASPDotNet" value="ASP.NET">
                            <label class="form-check-label" for="ASPDotNet">ASP.NET</label>
                        </div>
                        <div class="form-check d-inline-block ms-3">
                            <input class="form-check-input framework-csharp" type="checkbox" name="ASPDotNetmvc" id="ASPDotNetmvc" value="ASP.NET MVC">
                            <label class="form-check-label" for="ASPDotNetmvc">ASP.NET MVC</label>
                        </div>

                        <div class="form-check d-inline-block me-3">
                            <input class="form-check-input skill" type="checkbox" name="SkillPython" id="skillPython" value="Python">
                            <label class="form-check-label" for="skillPython">Python</label>
                        </div>
                        <div class="form-check d-inline-block ms-3">
                            <input class="form-check-input framework-python" type="checkbox" name="PythonDjango" id="pythonDjango" value="Django">
                            <label class="form-check-label" for="pythonDjango">Django</label>
                        </div>
                        <div class="form-check d-inline-block ms-3">
                            <input class="form-check-input framework-python" type="checkbox" name="PythonFlask" id="pythonFlask" value="Flask">
                            <label class="form-check-label" for="pythonFlask">Flask</label>
                        </div>

                        <div class="form-check d-inline-block me-3">
                            <input class="form-check-input skill" type="checkbox" name="SkillJavaScript" id="skillJavaScript" value="JavaScript">
                            <label class="form-check-label" for="skillJavaScript">JavaScript</label>
                        </div>
                        <div class="form-check d-inline-block ms-3">
                            <input class="form-check-input framework-javascript" name="JavaScriptReact" type="checkbox" id="javascriptReact" value="React">
                            <label class="form-check-label" for="javascriptReact">React</label>
                        </div>
                        <div class="form-check d-inline-block ms-3">
                            <input class="form-check-input framework-javascript" type="checkbox" name="javaScriptAngular" id="javascriptAngular" value="Angular">
                            <label class="form-check-label" for="javascriptAngular">Angular</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="salaryRange" class="form-label">Salary Range</label>
                        <input type="text" class="form-control" name="SalaryRange" id="salaryRange" placeholder="e.g., $50,000 - $70,000">
                    </div>
                    <div class="mb-3">
                        <label for="FinalDate" class="form-label">Final Date</label>
                        <input type="date" class="form-control" name="FinalDate" id="FinalDate" placeholder="Enter job Final Date" required>
                    </div>

                    <div class="mb-3">
                        <label for="jobDescription" class="form-label">Job Description</label>
                        <textarea class="form-control" name="JobDescription" id="jobDescription" rows="5" placeholder="Describe the job role, responsibilities, and requirements" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="applyLink" class="form-label">Application Link</label>
                        <input type="url" class="form-control" name="ApplyLink" id="applyLink" placeholder="e.g., https://company.jobs/apply">
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Post Job</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        const skillFrameworkMap = {
            skillJava: "framework-java",
            skillCSharp: "framework-csharp",
            skillPython: "framework-python",
            skillJavaScript: "framework-javascript"
        };

        document.querySelectorAll('.skill').forEach(skillCheckbox => {
            skillCheckbox.addEventListener('change', function () {
                const frameworkClass = skillFrameworkMap[this.id];
                document.querySelectorAll('.' + frameworkClass).forEach(frameworkCheckbox => {
                    frameworkCheckbox.checked = this.checked;
                });
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>

